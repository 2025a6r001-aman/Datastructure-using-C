#include<stdio.h>
#include<string.h>
#include<stdlib.h>
int convertBinaryToDecimal(int binNum){
    int decNum=0, base = 1;
    while(binNum !=0){
        int rem = binNum % 10;
        decNum += rem * base;
        base *= 2;
        binNum = binNum /10;

    }
    return decNum;
}
char* convertDecimalToHexa(int num){
    char *hexa = (char*)calloc(100, sizeof(char));
    while(num != 0){
        int rem = num %16;
        char str[2];
        if(rem >=0 && rem <=9)
        sprintf(str, "%d", rem);
        else if(rem == 10)
        str[0] = 'A';
        else if(rem == 11)
        str[0] = 'B';
        else if(rem == 12)
        str [0] = 'C';
         else if(rem == 13)
         str[0] = 'D';
         else if(rem == 14)
         str[0] = 'E';
         else
            str[0] = 'F';
        str[1] = '\0';
        strcat(hexa, str);
        num = num / 16;
    }
    strrev(hexa);
    return hexa;
    }
    int main(){
        int num;
        printf("Enter Binary number : ");
        scanf("%d", &num);
        int dec= convertBinaryToDecimal(num);
        char *hex = convertDecimalToHexa(dec);
        printf("Hexa-Decimal of %d is %s", num, hex);
        return 0;
    }
