#include <stdio.h>
#include<stdlib.h>

#define SIZE 10

int stack1[SIZE], stack2[SIZE];
int top1 = -1, top2 = -1;

void push(int S, int X) {
    if (S == 1) {
        if (top1 == SIZE - 1) {
            printf("Overflow\n");
        } else {
            stack1[++top1] = X;
        }
    }
    else if (S == 2) {
        if (top2 == SIZE - 1) {
            printf("Overflow\n");
        } else {
            stack2[++top2] = X;
        }
    }
}


void pop(int S) {
    if (S == 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            printf("Popped: %d\n", stack1[top1--]);
        }
    }
    else if (S == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            printf("Popped: %d\n", stack2[top2--]);
        }
    }
}
void peek(int S) {
    if (S == 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            printf("Top element: %d\n", stack1[top1]);
        }
    }
    else if (S == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            printf("Top element: %d\n", stack2[top2]);
        }
    }
}
void display(int S) {
    if (S== 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            for (int i = top1; i >= 0; i--)
                printf("%d ", stack1[i]);
            printf("\n");
        }
    }
    else if (S == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            for (int i = top2; i >= 0; i--)
                printf("%d ", stack2[i]);
            printf("\n");
        }
    }
}
int main() {
    int choice, S, X;

    while (1) {
        printf("\n1.Push");
        printf("\n2.Pop");
        printf("\n3.Peek");
        printf("\n4.Display");
        printf("\n5.Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);
      printf("Enter stack number (1 or 2): ");
        scanf("%d", &S);

        switch (choice) {
            case 1:
                printf("Enter element: ");
                scanf("%d", &X);
                push(S, X);
                break;
            case 2:
                pop(S);
                break;
            case 3:
                peek(S);
                break;
            case 4:
                display(S);
                break;
                case 5:
                exit(0);
            default:
                printf("Invalid choice\n");
        }
    }
    return 0;
}
        
