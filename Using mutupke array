#include <stdio.h>
#include<stdlib.h>

#define SIZE 5

int stack1[SIZE], stack2[SIZE];
int top1 = -1, top2 = -1;

// PUSH
void push(int s, int x) {
    if (s == 1) {
        if (top1 == SIZE - 1) {
            printf("Overflow\n");
        } else {
            stack1[++top1] = x;
        }
    }
    else if (s == 2) {
        if (top2 == SIZE - 1) {
            printf("Overflow\n");
        } else {
            stack2[++top2] = x;
        }
    }
}

// POP
void pop(int s) {
    if (s == 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            printf("Popped: %d\n", stack1[top1--]);
        }
    }
    else if (s == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            printf("Popped: %d\n", stack2[top2--]);
        }
    }
}

// PEEK
void peek(int s) {
    if (s == 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            printf("Top element: %d\n", stack1[top1]);
        }
    }
    else if (s == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            printf("Top element: %d\n", stack2[top2]);
        }
    }
}

// DISPLAY
void display(int s) {
    int i;
    if (s == 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            for (i = top1; i >= 0; i--)
                printf("%d ", stack1[i]);
            printf("\n");
        }
    }
    else if (s == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            for (i = top2; i >= 0; i--)
                printf("%d ", stack2[i]);
            printf("\n");
        }
    }
}

// MAIN
int main() {
    int choice, s, x;

    while (1) {
        printf("\n1.Push\n2.Pop\n3.Peek\n4.Display\n5.Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);
printf("Enter stack number (1 or 2): ");
        scanf("%d", &s);

        switch (choice) {
            case 1:
                printf("Enter element: ");
                scanf("%d", &x);
                push(s, x);
                break;
            case 2:
                pop(s);
                break;
            case 3:
                peek(s);
                break;
            case 4:
                display(s);
                break;
                case 5:
                exit(0);
            default:
                printf("Invalid choice\n");
        }
    }
    return 0;
}
        
