#include<stdio.h>
int main(){
    int num;
    printf("Enter binary number: ");
    scanf("%d", &num);
    int decNum=0, base=1;
    while(num != 0){
        int rem = num % 10;
        decNum += rem * base;
        base *= 2;
        num= num/10;

    }
    printf("Decimal = %d", decNum);
    return 0;

}
