#include<stdio.h>
#define Max 100
int list[Max];
int size=0;

void insertInBeg(int value){
    if(size == Max){
    printf("List is Full !!!");
    return;
    }
for(int i=size-1;i>=0;i--){
    list[i+1]= list[i];
}
list[0]=value;
size++;
printf("Element Inserted in Beginning !!!!\n");
}
void insertAtEnd(int value){
    if(size == Max){
        printf("List is Full !!!");
        return;
    }
    list[size++]= value;
    printf("Element Inserted !!!\n");
}
void insertAtPosition(int pos,int value){
    if(size == Max)
        printf("List is Full !!!");
    else if(pos<0 || pos>= size)
        printf("Invalid position !!!\n");
        else{
            for(int i=size-1;i>=pos;i--){
                list[i+1]= list[i];
            }
            list[pos]= value;
            size++;
            printf("Element Inserted !!!\n");
        }
}
void displaylist(){
    if(size == 0){
        printf("List is Empty !!\n");
        return;

    }
    for(int i=0;i<size;i++){
        printf("%d\t", list[i]);
    }
    printf("\n");
}
int main(){
    while(1){
        printf("1. Insert In Beginning\n");
        printf("2. Insert At End\n");
        printf("3.Insert At Specified Position\n");
        printf("4. Delete From Beginning\n");
        printf("5. Delete From End\n");
        printf("6.Delete from Specified Position\n");
        printf("7.Display List\n");
        printf("8. Search Element In List\n");
        printf("9.Update List Element\n");
        printf("10.Sort Element of List\n");
        printf("11. Exit\n");
    int choice, data;
    printf("Enter Choice: ");
    scanf("%d", &choice);
    switch(choice){
        case 1:
            printf("Enter Data: ");
            scanf("%d", &data);
            insertInBeg(data);
            break;
        case 2:
             printf("Enter Data: ");
            scanf("%d", &data);
            insertAtEnd(data);
            break;
        case 3:
             printf("Enter Position: ");
             scanf("%d", &pos);
             printf("Enter Data: ");
             scanf("%d", &data);
             insertAtPosition(pos,data);
            break;
        case 4:
            break;
        case 5:
            break;
        case 6:
            break;
        case 7:
            displaylist();
            break;
        case 8:
            break;
        case 9:
            break;
        case 10:
            break;
        default:
            printf("Invalid Choice !!!!!\n");
    

    
    }
    printf("\n");
}
return 0;
}
