#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int convertOctalToDecimal(int octalNum){
    int decNum=0, base=1;
    while(octalNum !=0){
        int rem = octalNum %10;
        decNum += rem * base;
        base *= 8;
       octalNum /= 10;
    }
    return decNum;


}

char* convertDecimalToHexa(int num){
    char *hexa = (char*)calloc(100, sizeof(char));
    while(num != 0){
        int rem = num %16;
        char str[2];
        if(rem >=0 && rem <=9)
        sprintf(str, "%d", rem);
        else if(rem == 10)
        str[0] = 'A';
        else if(rem == 11)
        str[0] = 'B';
        else if(rem == 12)
        str [0] = 'C';
         else if(rem == 13)
         str[0] = 'D';
         else if(rem == 14)
         str[0] = 'E';
         else
            str[0] = 'F';
        str[1] = '\0';
        strcat(hexa, str);
        num = num / 16;
    }

    strrev(hexa);
    return hexa;
}

    int main(){
    int num;
    printf("Enter Octal Number: ");
    scanf("%d",&num);
    char *hexa = convertDecimalToHexa(convertOctalToDecimal(num));
    printf("Hexadecimal of octal  number %d is %s",num,hexa);
    return 0;
        
    }
